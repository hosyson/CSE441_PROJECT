<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
android:background="#96D2EF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Next 5 days"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/glWeather"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:alignmentMode="alignMargins"
        android:columnCount="5"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="142dp"
            android:layout_row="0"
            android:layout_column="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="5/10"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icDay5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sun" />

            <TextView
                android:id="@+id/TempDay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="142dp"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="3/10"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/TempDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icDay3"
            android:layout_width="69dp"
            android:layout_height="142dp"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/Day4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="Day 4"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Day5"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="4"
            android:text="Day 5"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="139dp"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="4/10"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icDay4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/TempDay4"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Day3"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="Day 3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="141dp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icDay1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rain" />

            <TextView
                android:id="@+id/TempDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="142dp"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="2/10"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icDay2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cloudy" />

            <TextView
                android:id="@+id/TempDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Day2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Tomorrow"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Day1"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Today"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </GridLayout>

    <GridLayout
        android:id="@+id/glWeatherDetails"
        android:layout_width="391dp"
        android:layout_height="173dp"
        android:alignmentMode="alignMargins"
        android:columnCount="5"
        android:paddingTop="16dp"
        android:rowCount="1"
        android:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempNight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icNight1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rain" />

            <TextView
                android:id="@+id/WinDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempNight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icNight2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_moon" />

            <TextView
                android:id="@+id/WinDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="148dp"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempNight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icNight3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_moon" />

            <TextView
                android:id="@+id/WinDay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempNight4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iconNight4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_moon" />

            <TextView
                android:id="@+id/icNight4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TempNight5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/icNight5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rain" />

            <TextView
                android:id="@+id/WinDay5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
